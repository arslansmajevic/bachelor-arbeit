            fhir:display "Tablet"
        ]
    ] ;
    fhir:ingredient [
        a fhir:MedicationIngredient ;
        fhir:item [
            a fhir:Reference ;
            fhir:reference :ActiveIngredient123 ;  # Reference to the active ingredient details
            fhir:display "Paracetamol"
        ] ;
        fhir:strength [
            a fhir:Ratio ;
            fhir:numerator [
                a fhir:Quantity ;
                fhir:value "500"^^xsd:decimal ;
                fhir:unit "mg"^^xsd:string ;
                fhir:system "http://unitsofmeasure.org"^^xsd:string ;
                fhir:code "mg"^^xsd:string
            ] ;
            fhir:denominator [
                a fhir:Quantity ;
                fhir:value "1"^^xsd:decimal ;
                fhir:unit "tablet"^^xsd:string ;
                fhir:system "http://unitsofmeasure.org"^^xsd:string ;
